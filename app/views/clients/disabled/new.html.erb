<h1>New client</h1>

<% form_for(@client) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :quick_clone_name %><br />
    <%= f.text_field :quick_clone_name %>
  </p>
  <p>
    <%= f.label :snapshot_name %><br />
    <%= f.text_field :snapshot_name %>
  </p>
  <p>
    <%= f.label :suspended_at %><br />
    <%= f.datetime_select :suspended_at %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', clients_path %>
