<h1>Listing clients</h1>

<table>
  <tr>
    <th>Quick clone name</th>
    <th>Snapshot name</th>
    <th>Suspended at</th>
  </tr>

<% for client in @clients %>
  <tr>
    <td><%=h client.quick_clone_name %></td>
    <td><%=h client.snapshot_name %></td>
    <td><%=h client.suspended_at %></td>
    <td><%= link_to 'Show', client %></td>
    <td><%= link_to 'Edit', edit_client_path(client) %></td>
    <td><%= link_to 'Destroy', client, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

